{
	"name": "@substrate/playground-extension",
	"displayName": "playground",
	"description": "Substrate Playground extension",
	"version": "0.0.1",
	"publisher": "Parity",
	"repository": "https://github.com/paritytech/substrate-playground",
	"engines": {
		"vscode": "^1.57.0"
	},
	"extensionKind": [
		"ui",
		"workspace"
	],
	"capabilities": {
		"untrustedWorkspaces": {
			"supported": true
		}
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onStartupFinished"
	],
	"enabledApiProposals": [
		"resolvers",
		"terminalDataWriteEvent",
		"notebookEditor",
        "contribViewsRemote"
	],
    "contributes": {
        "views": {
            "remote": [
              {
                "id": "github.playground.explorer",
                "name": "%extension.playground.remoteViewExplorer%",
                "group": "targets@2",
                "remoteName": "playground"
            }
            ]
          },
          "viewsWelcome": [
			{
				"view": "github.playground.explorer",
				"contents": "%extension.playground.welcomeCreateCodespace%"
			},
			{
				"view": "github.playground.explorer",
				"contents": "%extension.playground.welcomeSignIn%"
			}
		]
    },
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js"
	},
    "dependencies": {
        "@substrate/playground-client": "1.8.8",
        "cross-fetch": "3.1.5",
        "@octokit/rest": "^18.0.0"
    },
	"devDependencies": {
		"@types/node": "16.11.1",
		"@types/vscode": "1.61.0",
		"@typescript-eslint/eslint-plugin": "5.0.0",
		"@typescript-eslint/parser": "5.0.0",
		"eslint": "8.0.1",
		"typescript": "4.4.4"
	}
}
